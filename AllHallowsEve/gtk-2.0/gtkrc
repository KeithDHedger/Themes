			{
				image
					{
						function	= BOX
						file		= "range/trough-horiz.png"
						stretch		= TRUE
						orientation	= HORIZONTAL
					}

				image
					{
						function	= BOX
						file		= "range/trough-vert.png"
						stretch		= TRUE
						orientation	= VERTICAL
					}

				image
					{
						function	= SLIDER
						state		= NORMAL
						file		= "range/null.png"
						stretch		= TRUE
